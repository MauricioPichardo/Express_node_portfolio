extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 My Fullstack Javascript Portfolio

      p.lead.text-light
        | Project that I built for Treehouse's full stack Javascript Degree, utilizing the skills that I learned throughout the course.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3



      each project in projects
        .cell
          a(href= '/projects/' + project.id)
            img.thumbnail(src= project.image_thumbs style="max-height:550px;width:100%" )
            h2= project.project_name
    
